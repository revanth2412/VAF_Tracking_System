<div><div class="container p-3 mx-auto w-50 form-box my-5 rounded-md">
    <h2 style="color: #181642" class="text-center mb-3">Fill the details to generate Token</h2>
    <form action="/addVaf" method="post">
      <div class="input-group mb-3">
        <select
          required
          name="ecutype"
          class="form-select"
          aria-label="Default select example"
        >
          <option selected disabled>select ECU</option>
          <option value="EPM44">ECU-1</option>
          <option value="EPM44-EVO">ECU-2</option>
          <option value="Next-Gen">ECU-3</option>
        </select>
      </div>
  
      <div class="input-group mb-3">
        <select
          required
          name="OEM"
          class="form-select"
          aria-label="Default select example"
        >
          <option selected disabled>select OEM name</option>
          <option value="TVS">OEM-1</option>
          <option value="HERO">OEM-2</option>
          <option value="BAJAJ">OEM-3</option>
          <option value="REML">OEM-4</option>
          <option value="KTM">OEM-5</option>
          <option value="POLARIS">OEM-6</option>
        </select>
      </div>
  
      <div class="mb-3">
        <label for="basic-url" class="form-label">ECU Serial number</label>
        <div class="input-group">
          <input
            required
            name="ecuserialnumber"
            type="text"
            class="form-control"
            id="basic-url"
            aria-describedby="basic-addon3 basic-addon4"
          />
        </div>
      </div>
      <div class="mb-3">
        <label for="basic-url" class="form-label">ECU part number</label>
        <div class="input-group">
          <input
            required
            name="ecupartnumber"
            type="text"
            class="form-control"
            id="basic-url"
            aria-describedby="basic-addon3 basic-addon4"
          />
        </div>
      </div>

      <div class="mb-3">
        <label for="basic-url" class="form-label">VIN number</label>
        <div class="input-group">
          <input
            required
            name="vinnumber"
            type="text"
            class="form-control"
            id="basic-url"
            aria-describedby="basic-addon3 basic-addon4"
          />
        </div>
      </div>

      <div class="input-group mb-3">
        <select
          required
          name="OEM"
          class="form-select"
          aria-label="Default select example"
        >
          <option selected disabled>select VAF feature</option>
          <option value="Sensorless QS">VAF-1</option>
          <option value="Traction control">VAF-2</option>
          <option value="TPMS">VAF-3</option>
          <option value="Sensorless Knock">VAF-4</option>
        </select>
      </div>
  
      <div class="input-group mb-3">
        <span class="input-group-text">Enabler email</span>
        <input
          required
          name="companyname"
          type="text"
          class="form-control"
          value = <%= userEmail %>
          aria-label="Amount (to the nearest dollar)"
        />
      </div>
      <button class="w-100 mb-3 mt-2 btn btn-md btn-success" type="submit">
        Submit
      </button>
    </form>
  </div>
  </div>
